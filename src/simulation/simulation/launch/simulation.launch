<launch>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="ev3_model" default="$(find ev3)/urdf/ev3.urdf.xacro"/>
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>

<include file="$(find gazebo_ros)/launch/empty_world.launch">
  <arg name="debug" value="$(arg debug)" />
  <arg name="gui" value="$(arg gui)" />
  <arg name="paused" value="$(arg paused)"/>
  <arg name="use_sim_time" value="$(arg use_sim_time)"/>
  <arg name="headless" value="$(arg headless)"/>
</include>

<param name="ev3_description" command="$(find xacro)/xacro.py $(arg ev3_model)" />
<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
      args="-x $(arg x) -y $(arg y) -unpause -urdf -model ev3 -param ev3_description" 
      respawn="false" output="screen" />

<include file="$(find ev3_control)/launch/ev3_control.launch"/>

<include file="$(find cvg_sim_gazebo)/launch/spawn_quadrotor.launch">
  <arg name="model" value="$(find cvg_sim_gazebo)/urdf/quadrotor_sensors.urdf.xacro"/>
</include>

</launch>
